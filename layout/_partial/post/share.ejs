<%
  var sUrl = url.replace(/index\.html$/, '');
  sUrl = /^(http:|https:)\/\//.test(sUrl) ? sUrl : 'http:' + sUrl;
%>
<div class="share-btn share-icons tooltip-left">
  <div class="tooltip tooltip-east">
    <span class="tooltip-item">
      <a href="#" class="share-sns share-outer">
        <i class="icon icon-share"></i>
      </a>
    </span>
    <span class="tooltip-content" id="share-arrow">
      <div class="share-wrap">
        <div class="share-icons">
          <a class="weibo share-sns" href="#" data-type="weibo" title="分享到微博">
            <i class="icon icon-weibo"></i>
          </a>
          <a class="weixin share-sns wxFab" href="#" target="_self" data-type="weixin" title="分享到微信">
            <i class="icon icon-weixin"></i>
          </a>
          <a class="qq share-sns" href="#" data-type="qq" title="分享到QQ">
            <i class="icon icon-qq"></i>
          </a>
          <!-- <a class="douban share-sns" href="#" data-type="douban" title="分享到豆瓣">
            <i class="icon icon-douban"></i>
          </a> -->
          <a class="qzone share-sns" href="#" data-type="qzone" title="分享到空间">
            <i class="icon icon-qzone"></i>
          </a>
          <!-- <a class="facebook share-sns" href="#" data-type="facebook" title="Facebook">
            <i class="icon icon-facebook"></i>
          </a>
          <a class="twitter share-sns" href="#" data-type="twitter" title="Twitter">
            <i class="icon icon-twitter"></i>
          </a>
          <a class="google share-sns" href="#" data-type="google" title="Google">
            <i class="icon icon-google"></i>
          </a> -->
        </div>
      </div>
    </span>
  </div>
</div>

<div class="page-modal wx-share js-wx-box">
    <a class="close js-modal-close" href="#"><i class="icon icon-close"></i></a>
    <p>扫一扫，分享到微信</p>
    <div class="wx-qrcode">
      <img src="<%- 'qrcode' in locals ? qrcode(sUrl) : '//api.qrserver.com/v1/create-qr-code/?size=150x150&data=' + sUrl  %>" alt="微信分享二维码">
    </div>
</div>

<div class="mask js-mask"></div>